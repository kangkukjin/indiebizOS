{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "headers": [
    {
      "source": "/api/guestbook",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ]
    },
    {
      "source": "/api/(rss|youtube)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=600, stale-while-revalidate=300" }
      ]
    }
  ]
}
