<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indiebiz.cliphelper"
    android:versionCode="3"
    android:versionName="2.0">

    <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="34" />

    <application android:label="IndieBiz IME">

        <!-- IME Service -->
        <service
            android:name=".IndieBizIME"
            android:label="IndieBiz IME"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <!-- Text Injection Receiver (ADB broadcast) -->
        <receiver
            android:name=".TextReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="ADB_INPUT_TEXT" />
                <action android:name="ADB_SET_CLIPBOARD" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
