{
  "id": "cloudflare",
  "name": "Cloudflare",
  "description": "Cloudflare API 통합 도구. Pages, Workers, R2, D1, Tunnel 등을 관리합니다.",
  "version": "2.0.0",
  "guide_file": "cloudflare_guide.md",
  "tools": [
    {
      "name": "cf_api",
      "description": "Cloudflare API를 인증된 상태로 호출합니다. 첫 호출 시 상세 가이드가 제공됩니다.",
      "input_schema": {
        "type": "object",
        "properties": {
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"],
            "default": "GET",
            "description": "HTTP 메서드"
          },
          "endpoint": {
            "type": "string",
            "description": "API 엔드포인트 (예: /zones, /accounts/{account_id}/tunnels)"
          },
          "body": {
            "type": "object",
            "description": "요청 본문 (POST, PUT, PATCH에 사용)"
          },
          "params": {
            "type": "object",
            "description": "쿼리 파라미터"
          }
        },
        "required": ["endpoint"]
      }
    }
  ]
}
