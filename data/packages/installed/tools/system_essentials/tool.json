{
  "id": "system_essentials",
  "name": "System Essentials Kit",
  "description": "파일/시스템 기본 도구",
  "version": "1.0.0",
  "author": "System AI",
  "tools": [
    {
      "name": "read_file",
      "description": "파일 내용 읽기. 한 번 호출로 전체 내용 반환.",
      "input_schema": {
        "type": "object",
        "properties": {
          "file_path": { "type": "string", "description": "파일 경로" }
        },
        "required": ["file_path"]
      }
    },
    {
      "name": "write_file",
      "description": "파일에 내용 쓰기. 한 번 호출로 완료.",
      "input_schema": {
        "type": "object",
        "properties": {
          "file_path": { "type": "string", "description": "파일 경로" },
          "content": { "type": "string", "description": "기록할 내용" }
        },
        "required": ["file_path", "content"]
      }
    },
    {
      "name": "list_directory",
      "description": "디렉토리 목록 조회. 한 번 호출로 모든 파일/폴더 반환.",
      "input_schema": {
        "type": "object",
        "properties": {
          "dir_path": { "type": "string", "description": "디렉토리 경로 (기본: 현재)" }
        }
      }
    },
    {
      "name": "grep_files",
      "description": "파일 내용 검색. 한 번 호출로 매칭 라인+번호 반환. 정규표현식/glob 지원.",
      "input_schema": {
        "type": "object",
        "properties": {
          "pattern": { "type": "string", "description": "검색 텍스트/정규표현식" },
          "file_pattern": { "type": "string", "description": "파일 패턴 (예: '*.py')" },
          "root_path": { "type": "string", "description": "검색 루트 경로" },
          "regex": { "type": "boolean", "description": "정규표현식 사용 (기본 false)" }
        },
        "required": ["pattern"]
      }
    },
    {
      "name": "get_current_time",
      "description": "현재 날짜/시간 조회. 파라미터 없이 한 번 호출.",
      "input_schema": {
        "type": "object",
        "properties": {
          "format": { "type": "string", "description": "포맷 (기본: %Y-%m-%d %H:%M:%S)" }
        }
      }
    },
    {
      "name": "run_command",
      "description": "쉘 명령어 실행. 위험 명령(rm, sudo)은 approved=true 필요.",
      "input_schema": {
        "type": "object",
        "properties": {
          "command": { "type": "string", "description": "쉘 명령어" },
          "timeout": { "type": "number", "description": "제한시간(초, 기본 60, 최대 300)" },
          "approved": { "type": "boolean", "description": "위험 명령 승인 여부" }
        },
        "required": ["command"]
      }
    },
    {
      "name": "glob_files",
      "description": "glob 패턴으로 파일 검색. 한 번 호출로 매칭 파일 목록 반환.",
      "input_schema": {
        "type": "object",
        "properties": {
          "pattern": { "type": "string", "description": "glob 패턴 (예: '**/*.py')" },
          "root_path": { "type": "string", "description": "검색 루트 경로" }
        },
        "required": ["pattern"]
      }
    },
    {
      "name": "edit_file",
      "description": "파일 부분 수정 (old→new 교체). 전체 재작성 없이 정확한 수정.",
      "input_schema": {
        "type": "object",
        "properties": {
          "file_path": { "type": "string", "description": "파일 경로" },
          "old_string": { "type": "string", "description": "교체할 기존 문자열 (고유해야 함)" },
          "new_string": { "type": "string", "description": "새 문자열" }
        },
        "required": ["file_path", "old_string", "new_string"]
      }
    },
    {
      "name": "open_in_browser",
      "description": "URL/파일을 브라우저에서 열기.",
      "input_schema": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "description": "URL 또는 파일 경로" }
        },
        "required": ["path"]
      }
    }
  ]
}
