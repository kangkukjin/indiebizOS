[
  {
    "name": "ddgs_search",
    "description": "DuckDuckGo를 사용하여 일반 웹 정보를 검색합니다. 결과는 JSON 파일로 저장됩니다.",
    "input_schema": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "검색 키워드"
        },
        "count": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 10
        },
        "country": {
          "type": "string",
          "default": "kr-kr"
        }
      },
      "required": ["query"]
    }
  },
  {
    "name": "google_news_search",
    "description": "Google News에서 최신 뉴스를 검색합니다. 결과는 JSON 파일로 저장됩니다.",
    "input_schema": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "뉴스 검색어"
        },
        "count": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 30
        },
        "language": {
          "type": "string",
          "default": "ko"
        }
      },
      "required": ["query"]
    }
  }
]
